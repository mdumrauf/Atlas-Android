<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:id="@+id/swipeable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ui_swipeable_item_foreground_selector"
        android:duplicateParentState="true">

        <com.layer.ui.Avatar
            android:id="@+id/avatar"
            android:layout_width="@dimen/layer_ui_avatar_item_single"
            android:layout_height="@dimen/layer_ui_avatar_item_single"
            android:layout_margin="@dimen/layer_ui_padding_normal"/>

        <!-- right content part -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <!-- delimiter -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/layer_ui_item_divider"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingRight="@dimen/layer_ui_padding_normal"
                >

                <!-- Tomaz and time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="[title]"
                        android:textSize="@dimen/layer_ui_text_size_primary_item_title"
                        />

                    <TextView
                        android:id="@+id/right_accessory_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/layer_ui_padding_narrow"
                        android:singleLine="true"
                        android:text="[time]"
                        android:textColor="@color/layer_ui_text_blue"
                        android:textSize="@dimen/layer_ui_text_size_primary_item_metadata"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="[last message]"
                    android:textSize="@dimen/layer_ui_text_size_primary_item_subtitle"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>